<h1>Users#show</h1>
<p>Find me in app/views/users/show.html.erb</p>

<h1><%= @user.name %></h1>
<h3><%= @user.location %></h3>
<h3><%= @user.zip_code %></h3>
<p><%= @user.bio %></p>
<br>
<ul>
    <%= @user.posts.each do |p| %>
        <li><%= link_to(p.title, post_path(p)) %></li>
    <% end %>
</ul>

<%= link_to 'Go to All Posts', posts_path, class: 'btn btn-success btn-lg"' %>